<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pref_app_appearance">

        <ListPreference
            app:icon="@drawable/ic_dark_mode"
            app:entries="@array/pref_app_theme_options"
            app:entryValues="@array/pref_app_theme_values"
            app:defaultValue="-1"
            app:useSimpleSummaryProvider="true"
            app:key="@string/pref_app_theme_name"
            app:title="@string/pref_app_theme_title" />

    </PreferenceCategory>

</PreferenceScreen>
