<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/selected" android:state_selected="true" android:drawable="@drawable/ic_selected" />
    <item android:id="@+id/unselected" android:drawable="@drawable/ic_void" />
    
    <transition
        android:fromId="@id/unselected"
        android:toId="@id/selected"
        android:drawable="@drawable/anim_ic_selected_in" />

    <transition
        android:fromId="@id/selected"
        android:toId="@id/unselected"
        android:drawable="@drawable/anim_ic_selected_out" />

</animated-selector>