<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_folder_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_note_selector"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/fab_mini_margin"
        android:layout_marginStart="@dimen/fab_mini_margin"
        android:layout_marginBottom="@dimen/padding_small"
        android:visibility="gone"
        app:fabCustomSize="@dimen/fab_mini_size"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/blank"
        app:srcCompat="@drawable/ic_create_new_folder"
        app:tint="@color/blank" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_note_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_note_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/fab_mini_margin"
        android:layout_marginStart="@dimen/fab_mini_margin"
        android:layout_marginBottom="@dimen/padding_small"
        android:visibility="gone"
        app:fabCustomSize="@dimen/fab_mini_size"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/blank"
        app:srcCompat="@drawable/ic_note_add"
        app:tint="@color/blank" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/padding_small"
        android:layout_marginStart="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="@color/blank"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:tint="@color/blank"
        android:transitionName="@string/transition_name_fab" />

</RelativeLayout>