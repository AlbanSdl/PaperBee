<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editor_toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/appbarSpace"
    android:paddingVertical="@dimen/padding_tiny">

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_format_bold"
        android:tint="@color/dark"
        app:tooltip="@string/format_bold" />

    <Space
        android:layout_width="@dimen/appbarSpace"
        android:layout_height="wrap_content" />

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_format_italic"
        android:tint="@color/dark"
        app:tooltip="@string/format_italic" />

    <Space
        android:layout_width="@dimen/appbarSpace"
        android:layout_height="wrap_content" />

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_format_underlined"
        android:tint="@color/dark"
        app:tooltip="@string/format_underline" />

    <Space
        android:layout_width="@dimen/appbarSpace"
        android:layout_height="wrap_content" />

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/font_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_format_color_text"
        android:tint="@color/dark"
        app:tooltip="@string/format_text_color" />

    <Space
        android:layout_width="@dimen/appbarSpace"
        android:layout_height="wrap_content" />

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/background_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_format_color_background"
        android:tint="@color/dark"
        app:tooltip="@string/format_back_color" />

    <Space
        android:layout_width="@dimen/appbarSpace"
        android:layout_height="wrap_content" />

    <fr.asdl.paperbee.view.rounded.RoundedImageView
        android:id="@+id/insert_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/appbarElementPadding"
        android:src="@drawable/ic_insert_link"
        android:tint="@color/dark"
        app:tooltip="@string/format_insert_link" />

</LinearLayout>