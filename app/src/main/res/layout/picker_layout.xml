<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/padding_small">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_blank_circle_border"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <view
            android:id="@+id/color_picker_elem"
            class="fr.asdl.paperbee.view.options.ColorPicker$ColorPickerView"
            android:layout_width="@dimen/large"
            android:layout_height="@dimen/large"
            android:background="@drawable/ic_blank_circle_selectable"
            android:contentDescription="@string/color_pick"
            android:src="@drawable/ic_select_round" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>